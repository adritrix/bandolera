{% extends 'baseV2.html.twig' %}

{% block title %}Hello EditProfileController!
{% endblock %}
{% block stylesheets %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		#outbox {
			font-family: Arial, Helvetica, sans-serif;
			border-collapse: collapse;
			width: 100%;
		}

		#outbox td,
		#outbox th {
			border: 1px solid #ddd;
			padding: 8px;
		}

		#outbox tr:nth-child(even) {
			{
				# background-color: #f2f2f2; #
			}
		}

		#outbox tr:hover {
			border: 1.5px solid purple;
		}

		#outbox th {
			padding-top: 12px;
			padding-bottom: 12px;
			text-align: left;
			background-color: purple;
			color: white;
		}

		.notRead {
			color: purple;
			font-weight: bolder;

		}

		.notRead > a {
			color: purple;
			font-weight: bolder;

		}

		.read {
			color: wheat;
		}

		.read > a {
			color: wheat;
		}


		.msg {
			display: flex;
			flex-direction: column;
			margin: auto;
			align-items: center;
            justify-content: space-around;
		}

        .msg > form > div{
            display: flex;
			flex-direction: column;
			margin: auto;
			align-items: center;
            justify-content: space-around;
        }

		button::hover {
			cursor: pointer;
		}

		textarea {
			background-color: purple;
			color: wheat;
		}
	</style>


{% endblock %}


{% block body %}
<br>
	<div class="msg">
		{{ form_start(profileForm) }}
		{{ form_row(profileForm.firtsname) }}
		{{ form_row(profileForm.secondname) }}
		{{ form_row(profileForm.email) }}
		{{ form_row(profileForm.address) }}
		{{ form_row(profileForm.age) }}
		<button type="submit" class="btn">Alter</button>
		{{ form_end(profileForm) }}
	</div>
{% endblock %}

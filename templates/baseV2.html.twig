<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		<style>

			html {
				height: 100%;
				background-color: grey;
				color: wheat;
			}

			body {
				height: 100%;

			}

			a {
				color: yellowgreen;
                text-decoration: none;
			}

			#contenedorPrincipal {
				display: flex;
				flex-direction: column;
				margin: auto;

			}

			form {
				display: flex;
				flex-direction: column;
				margin: auto;
			}
			button {
				background-color: wheat;
				{
					# color: white; #
				}
			}


			#menu {
				display: flex;
				flex-direction: row;
				justify-content: space-around;
				align-items: center;
				border: 1px solid greenyellow;
				height: 7em;
			}

			#controles {
				display: flex;
				flex-direction: column;
				justify-content: space-around;
				align-items: center;
				font-size: 20px;
			}
		</style>
		{% block stylesheets %}
			{# {{ encore_entry_link_tags('app') }} #}
		{% endblock %}

		{% block javascripts %}
			{# {{ encore_entry_script_tags('app') }} #}
		{% endblock %}
	</head>
	<body>
		<nav id="menu">
			<div>{{app.user.id}}</div>
			<div>{{app.user.username}}</div>
			<div>{{app.user.firtsname}}</div>
			<div>{{app.user.secondname}}</div>
			<div>{{app.user.email}}</div>
			<div>{{app.user.address}}</div>
			<div>{{app.user.age}}</div>
			<div id="controles">
				<div>
					<a href="{{ path('inbox')}}">Inbox</a>
				</div>
				<div>
					<a href="{{ path('outbox')}}">Outbox</a>
				</div>
				<div>
					<a href="{{ path('edit_profile')}}">Alter Profile</a>
				</div>
				<div>
					<a href="{{ path('new_message')}}">Send Message</a>
				</div>
				<div>
					<a href="{{ path('app_logout')}}">Log-Out</a>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}
	</body>
</html>
